---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Menú - Big Nira Burger">
    <!-- Sección del Menú con efectos avanzados -->
    <section class="py-20 lg:py-32 bg-gradient-to-br from-gray-900 via-black/60 to-gray-800 relative overflow-hidden">
        <!-- Efectos de fondo animados -->
        <div class="absolute inset-0">
            <!-- Gradiente de resplandor -->
            <div class="absolute top-0 left-1/4 w-96 h-96 bg-gradient-radial from-orange-500/10 via-orange-500/5 to-transparent rounded-full blur-3xl animate-pulse"></div>
            <div class="absolute bottom-0 right-1/4 w-96 h-96 bg-gradient-radial from-red-500/10 via-red-500/5 to-transparent rounded-full blur-3xl animate-pulse delay-1000"></div>
            
            <!-- Líneas decorativas animadas -->
            <div class="absolute top-20 left-0 w-full h-px bg-gradient-to-r from-transparent via-orange-500/30 to-transparent"></div>
            <div class="absolute bottom-20 left-0 w-full h-px bg-gradient-to-r from-transparent via-red-500/30 to-transparent"></div>
            
            <!-- Partículas flotantes -->
            <div class="floating-particles">
                <div class="particle particle-1"></div>
                <div class="particle particle-2"></div>
                <div class="particle particle-3"></div>
                <div class="particle particle-4"></div>
                <div class="particle particle-5"></div>
            </div>
            
            <!-- Efecto de grano -->
            <div class="absolute inset-0 grain opacity-30"></div>
        </div>
        
        <div class="relative z-10 container mx-auto px-4 sm:px-6 lg:px-8">
            <!-- Header Section con efectos avanzados -->
            <div class="text-center mb-16 lg:mb-20 relative">
                <!-- Badge con efectos glow -->
                <div class="inline-flex items-center space-x-3 bg-gradient-to-r from-orange-500/25 via-red-500/20 to-orange-500/25 backdrop-blur-md border border-orange-500/40 px-8 py-4 rounded-full mb-10 hover:scale-110 transition-all duration-500 shadow-2xl shadow-orange-500/20 hover:shadow-orange-500/40 group">
