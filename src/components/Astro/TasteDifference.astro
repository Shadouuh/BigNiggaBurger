---
// TasteDifference.astro
---

<section class="relative min-h-screen  flex items-center overflow-hidden" style={{
    backgroundColor: '#cd2222',
    paddingRight: 0,
}}>
        {/* Efecto Grain */}
        <div class="absolute inset-0 opacity-25 mix-blend-multiply">
          <div
            class="w-full h-full bg-repeat opacity-50"
            style={{
              backgroundImage: `url("data:image/svg+xml,%3Csvg viewBox='0 0 300 300' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter2'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.85' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter2)' opacity='0.4'/%3E%3C/svg%3E")`,
              backgroundSize: "150px 150px",
            }}
          ></div>
        </div>

    <!-- Elementos decorativos -->
    <div class="absolute inset-0">
        <div class="absolute top-10 left-10 w-32 h-32 bg-white/5 rounded-full blur-2xl animate-pulse"></div>
        <div class="absolute bottom-10 right-10 w-48 h-48 bg-yellow-300/10 rounded-full blur-3xl animate-pulse delay-1000"></div>
        <div class="absolute top-1/2 left-1/4 w-24 h-24 bg-white/3 rounded-full blur-xl animate-pulse delay-500"></div>
        <div class="absolute top-1/3 right-1/3 w-36 h-36 bg-red-300/5 rounded-full blur-2xl animate-pulse delay-700"></div>
    </div>

    <div class="relative z-10 container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
            <!-- Contenido de texto -->
            <div class="space-y-6 lg:space-y-8">
                <!-- Badge -->
                <div class="inline-flex items-center space-x-2 bg-white/20 backdrop-blur-sm border border-white/30 px-4 sm:px-6 py-2 sm:py-3 rounded-full">
                    <span class="text-white uppercase tracking-widest text-xs sm:text-sm" style="font-family: 'Poppins-Bold';">Nuestra Coleccion</span>
                </div>

                <!-- Títulos -->
                <div class="space-y-2 lg:space-y-4">
                    <h2 class="text-4xl sm:text-6xl lg:text-7xl xl:text-8xl text-white leading-tight tracking-tighter" style="font-family: 'Poppins-Bold';">
                        SABOREA LA
                    </h2>
                    <h3 class="text-4xl sm:text-6xl lg:text-7xl -translate-y-4 sm:-translate-y-9 xl:text-8xl text-transparent bg-clip-text bg-gradient-to-r from-yellow-300 to-yellow-200 leading-tight tracking-tighter" style="font-family: 'Poppins-Bold';">
                        PERFECCION
                    </h3>
                </div>

                <!-- Descripción -->
                
                <p class="-translate-y-12 text-lg sm:text-xl lg:text-2xl text-red-100 leading-relaxed max-w-lg" style="font-family: 'Poppins';">
                    Experimenta la <span class="text-yellow-200" style="font-family: 'Poppins-Bold';">Perfecta Harmonia</span> de nuestra Carne e Ingredientes Frescos con nuestra propia Salsa Nigga.
                </p>

                <!-- Botón -->
                  <a href="https://www.pedidosya.com.ar/restaurantes/buenos-aires/burger-king-obelisco-a4cad619-85df-4ee4-9107-70ef92f21f8d-menu">
              
                <button class="-translate-y-12 group relative bg-white text-red-500 hover:bg-gray-100 px-8 sm:px-10 py-4 sm:py-4 text-lg sm:text-xl uppercase tracking-wide rounded-full shadow-2xl transition-all duration-500 hover:scale-110 overflow-hidden cursor-pointer" style="font-family: 'Poppins-Bold';">
                    <span class="relative z-10">Probala Ahora</span>
                    <div class="absolute inset-0 bg-gradient-to-r from-red-500/10 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                </button>
            </a>
            </div>

            <!-- Imagen -->
            <div class="relative order-first lg:order-last">
                <!-- Glow effect -->
                <div class="absolute -inset-4 bg-gradient-to-r from-yellow-400/20 to-red-400/20 rounded-3xl blur-2xl"></div>
                
                <!-- Imagen principal -->
                <div class="relative">
                    <img 
                        src="https://images.unsplash.com/photo-1550547660-d9450f859349?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1965&q=80"
                        alt="Signature Burger"
                        class="relative w-full h-auto py-14 shadow-2xl hover:scale-105 transition-transform duration-500"
                    />
                    
                    <!-- Overlay sutil para mejor integración -->
                    <div class="absolute inset-0 bg-gradient-to-t from-red-900/20 to-transparent rounded-3xl"></div>
                </div>

                <!-- Elementos decorativos adicionales alrededor de la imagen -->
                <div class="absolute -top-6 -right-6 w-12 h-12 bg-yellow-400/30 rounded-full blur-lg animate-pulse"></div>
                <div class="absolute -bottom-4 -left-4 w-8 h-8 bg-white/20 rounded-full blur-md animate-pulse delay-300"></div>
            </div>
        </div>
    </div>
</section>