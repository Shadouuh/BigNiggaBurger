---
// Sides.astro
---

<section class="py-20 lg:py-32  relative overflow-hidden">
    <!-- Efecto Grain -->
    <div class="absolute inset-0 opacity-25 mix-blend-multiply">
        <div 
            class="w-full h-full bg-repeat opacity-50"
            style={{
                backgroundImage: `url("data:image/svg+xml,%3Csvg viewBox='0 0 280 280' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter5'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter5)' opacity='0.4'/%3E%3C/svg%3E")`,
                backgroundSize: "160px 160px",
            }}
        ></div>
    </div>

    <!-- Elementos decorativos -->
    <div class="absolute inset-0">
        <div class="absolute top-20 right-20 w-72 h-72 lg:w-96 lg:h-96 bg-orange-500/10 rounded-full blur-3xl animate-pulse"></div>
        <div class="absolute bottom-20 left-20 w-60 h-60 lg:w-72 lg:h-72 bg-red-500/10 rounded-full blur-3xl animate-pulse delay-1000"></div>
        <div class="absolute top-1/3 left-1/2 w-32 h-32 bg-yellow-400/5 rounded-full blur-2xl animate-pulse delay-500"></div>
        
        <!-- Líneas decorativas sutiles -->
        <div class="absolute top-0 left-1/3 w-px h-full bg-gradient-to-b from-transparent via-orange-500/10 to-transparent"></div>
        <div class="absolute top-0 right-1/4 w-px h-full bg-gradient-to-b from-transparent via-red-500/10 to-transparent"></div>
    </div>

    <div class="relative z-10 container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
            <!-- Contenido de texto -->
            <div class="space-y-6 lg:space-y-8">
                <!-- Badge -->
                <div class="inline-flex items-center space-x-2 bg-gradient-to-r from-orange-500/20 to-red-500/20 backdrop-blur-sm border border-orange-500/30 px-4 sm:px-6 py-2 sm:py-3 rounded-full hover:scale-105 transition-transform duration-300">
                    <div class="w-2 h-2 bg-orange-400 rounded-full animate-pulse"></div>
                    <span class="text-orange-400 uppercase tracking-widest text-xs sm:text-sm" style="font-family: 'Poppins-Bold';">Delicias Crispy</span>
                </div>

                <!-- Títulos -->
                <div class="space-y-2 lg:space-y-4">
                    <h2 class="text-4xl sm:text-5xl lg:text-6xl xl:text-7xl text-white leading-tight tracking-tighter" style="font-family: 'Poppins-Bold';">
                        LA COMPAÑIA
                    </h2>
                    <h3 class="text-4xl -translate-y-4 sm:-translate-y-8  sm:text-5xl lg:text-6xl xl:text-7xl text-transparent bg-clip-text bg-gradient-to-r from-orange-400 to-red-500 leading-tight tracking-tighter" style="font-family: 'Poppins-Bold';">
                        PERFECTA
                    </h3>
                </div>

                <!-- Descripción -->
                <p class=" -translate-y-12  text-lg sm:text-xl lg:text-2xl text-gray-300 leading-relaxed max-w-lg" style="font-family: 'Poppins';">
                    Complementa tu burger con nuestros{" "}
                    <span class="text-orange-400" style="font-family: 'Poppins-Bold';">acompañamientos crujientes</span> perfectamente sazonados.
                </p>

                <!-- Botón -->
                 <a href="menu">
                <button class="-translate-y-12  group relative bg-gradient-to-r from-orange-500 to-red-500 hover:from-orange-600 hover:to-red-600 text-black px-8 sm:px-10 py-4 sm:py-4 text-lg sm:text-xl uppercase tracking-wide rounded-full shadow-2xl transition-all duration-500 hover:scale-110 overflow-hidden cursor-pointer" style="font-family: 'Poppins-Bold';">
                    <span class="relative z-10 text-white" style="font-family: 'Poppins-Bold';">Ver Acompañamientos</span>
                    <div class="absolute inset-0 bg-gradient-to-r from-white/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                </button>
            </a>
            </div>

            <!-- Grid de imágenes en escalera con efectos avanzados -->
            <div class="flex justify-center items-end gap-6 lg:gap-6 h-96 lg:h-[500px] group/container">
                <!-- Imagen 1: Papas Fritas -->
                <div class="relative group/item flex flex-col items-center transition-all duration-300 ease-out group-hover/container:scale-95 hover:!scale-110 hover:!z-30 hover:-translate-y-4">
                    <!-- Imagen vertical -->
                    <div class="relative w-16 sm:w-20 lg:w-24 h-64 lg:h-80 mb-4 transform translate-y-0 transition-all duration-300 ease-out group-hover/item:scale-125 group-hover/item:w-20 sm:group-hover/item:w-24 lg:group-hover/item:w-32">
                        <!-- Glow effect mejorado -->
                        <div class="absolute -inset-4 bg-gradient-to-r from-orange-500/30 to-red-500/30 rounded-2xl blur-2xl opacity-0 group-hover/item:opacity-100 transition-all duration-300"></div>
                        
                        <img 
                            src="https://images.unsplash.com/photo-1573080496219-bb080dd4f877?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=400&q=80"
                            alt="Papas Fritas"
                            class="w-full h-full object-cover rounded-2xl shadow-2xl transition-all duration-300 ease-out group-hover/item:shadow-orange-500/25"
                        />
                        
                        <!-- Elementos decorativos mejorados -->
                        <div class="absolute -top-2 -right-2 w-4 h-4 bg-orange-400/30 rounded-full blur-sm animate-pulse transition-all duration-300 group-hover/item:w-6 group-hover/item:h-6 group-hover/item:bg-orange-400/60"></div>
                        
                        <!-- Overlay de información en hover -->
                        <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent rounded-2xl opacity-0 group-hover/item:opacity-100 transition-all duration-300">
                            <div class="absolute bottom-4 left-4 right-4">
                                <h4 class="text-white text-sm lg:text-base mb-1" style="font-family: 'Poppins-Bold'; font-size: 14px;">Papas Crujientes</h4>
                                <p class="text-orange-300 text-xs lg:text-sm" style="font-family: 'Poppins';">Doradas & Sazonadas</p>
                            </div>
                        </div>
                    </div>
                    
                   
                </div>

                <!-- Imagen 2: Anillos de Cebolla -->
                <div class="relative group/item flex flex-col items-center transition-all duration-300 ease-out group-hover/container:scale-95 hover:!scale-110 hover:!z-30 hover:-translate-y-4 group-hover/container:[&:not(:hover)]:translate-x-2">
                    <!-- Imagen vertical -->
                    <div class="relative w-16 sm:w-20 lg:w-24 h-72 lg:h-88 mb-4 transform translate-y-4 transition-all duration-300 ease-out group-hover/item:scale-125 group-hover/item:w-20 sm:group-hover/item:w-24 lg:group-hover/item:w-32">
                        <!-- Glow effect mejorado -->
                        <div class="absolute -inset-4 bg-gradient-to-r from-red-500/30 to-orange-500/30 rounded-2xl blur-2xl opacity-0 group-hover/item:opacity-100 transition-all duration-300"></div>
                        
                        <img 
                            src="https://images.unsplash.com/photo-1541592106381-b31e9677c0e5?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=400&q=80"
                            alt="Anillos de Cebolla"
                            class="w-full h-full object-cover rounded-2xl shadow-2xl transition-all duration-300 ease-out group-hover/item:shadow-red-500/25"
                        />
                        
                        <!-- Elementos decorativos mejorados -->
                        <div class="absolute -top-2 -right-2 w-4 h-4 bg-red-400/30 rounded-full blur-sm animate-pulse delay-300 transition-all duration-300 group-hover/item:w-6 group-hover/item:h-6 group-hover/item:bg-red-400/60"></div>
                        
                        <!-- Overlay de información en hover -->
                        <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent rounded-2xl opacity-0 group-hover/item:opacity-100 transition-all duration-300">
                            <div class="absolute bottom-4 left-4 right-4">
                                <h4 class="text-white text-sm lg:text-base  mb-1" style="font-family: 'Poppins-Bold'; font-size: 14px;">Anillos Crujientes</h4>
                                <p class="text-red-300 text-xs lg:text-sm" style="font-family: 'Poppins';">Cebolla Dorada</p>
                            </div>
                        </div>
                    </div>
                    
                   
                </div>

                <!-- Imagen 3: Nuggets -->
                <div class="relative group/item flex flex-col items-center transition-all duration-300 ease-out group-hover/container:scale-95 hover:!scale-110 hover:!z-30 hover:-translate-y-4 group-hover/container:[&:not(:hover)]:translate-x-1">
                    <!-- Imagen vertical -->
                    <div class="relative w-16 sm:w-20 lg:w-24 h-80 lg:h-96 mb-4 transform translate-y-8 transition-all duration-300 ease-out group-hover/item:scale-125 group-hover/item:w-20 sm:group-hover/item:w-24 lg:group-hover/item:w-32">
                        <!-- Glow effect mejorado -->
                        <div class="absolute -inset-4 bg-gradient-to-r from-yellow-500/30 to-orange-500/30 rounded-2xl blur-2xl opacity-0 group-hover/item:opacity-100 transition-all duration-300"></div>
                        
                        <img 
                            src="https://images.unsplash.com/photo-1562967914-608f82629710?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=400&q=80"
                            alt="Nuggets de Pollo"
                            class="w-full h-full object-cover rounded-2xl shadow-2xl transition-all duration-300 ease-out group-hover/item:shadow-yellow-500/25"
                        />
                        
                        <!-- Elementos decorativos mejorados -->
                        <div class="absolute -top-2 -right-2 w-4 h-4 bg-yellow-400/30 rounded-full blur-sm animate-pulse delay-500 transition-all duration-300 group-hover/item:w-6 group-hover/item:h-6 group-hover/item:bg-yellow-400/60"></div>
                        
                        <!-- Overlay de información en hover -->
                        <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent rounded-2xl opacity-0 group-hover/item:opacity-100 transition-all duration-300">
                            <div class="absolute bottom-4 left-4 right-4">
                                <h4 class="text-white text-sm lg:text-base  mb-1" style="font-family: 'Poppins-Bold';  font-size: 14px;">Nuggets Dorados</h4>
                                <p class="text-yellow-300 text-xs lg:text-sm" style="font-family: 'Poppins';">Pollo Crujiente</p>
                            </div>
                        </div>
                    </div>
                    
                   
                </div>

                <!-- Imagen 4: Ensalada -->
                <div class="relative group/item flex flex-col items-center transition-all duration-300 ease-out group-hover/container:scale-95 hover:!scale-110 hover:!z-30 hover:-translate-y-4 group-hover/container:[&:not(:hover)]:-translate-x-2">
                    <!-- Imagen vertical -->
                    <div class="relative w-16 sm:w-20 lg:w-24 h-72 lg:h-88 mb-4 transform translate-y-4 transition-all duration-300 ease-out group-hover/item:scale-110 group-hover/item:w-20 sm:group-hover/item:w-24 lg:group-hover/item:w-32">
                        <!-- Glow effect mejorado -->
                        <div class="absolute -inset-4 bg-gradient-to-r from-green-500/30 to-emerald-500/30 rounded-2xl blur-2xl opacity-0 group-hover/item:opacity-100 transition-all duration-300"></div>
                        
                        <img 
                            src="https://images.unsplash.com/photo-1512621776951-a57141f2eefd?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=400&q=80"
                            alt="Ensalada Fresca"
                            class="w-full h-full object-cover rounded-2xl shadow-2xl transition-all duration-400 ease-out group-hover/item:shadow-green-500/25"
                        />
                        
                        <!-- Elementos decorativos mejorados -->
                        <div class="absolute -top-2 -right-2 w-4 h-4 bg-green-400/30 rounded-full blur-sm animate-pulse delay-300 transition-all duration-300 group-hover/item:w-6 group-hover/item:h-6 group-hover/item:bg-green-400/60"></div>
                        
                        <!-- Overlay de información en hover -->
                        <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent rounded-2xl opacity-0 group-hover/item:opacity-100 transition-all duration-300">
                            <div class="absolute bottom-4 left-4 right-4">
                                <h4 class="text-white text-sm lg:text-base mb-1" style="font-family: 'Poppins-Bold'; font-size: 14px;">Ensalada Fresca</h4>
                                <p class="text-green-300 text-xs lg:text-sm" style="font-family: 'Poppins';">Vegetales Frescos</p>
                            </div>
                        </div>
                    </div>
                    
                    
                </div>
            </div>
        </div>

        <!-- Sección adicional de acompañamientos -->
        <div class="mt-16 lg:mt-20 text-center">
            <div class="grid grid-cols-2 md:grid-cols-4 gap-6 lg:gap-8 max-w-4xl mx-auto">
                <!-- Item 1 -->
                <div class="group text-center">
                    <div class="w-16 h-16 mx-auto mb-4 bg-gradient-to-r from-orange-500/20 to-red-500/20 rounded-full flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                        <div class="w-8 h-8 bg-orange-400 rounded-full"></div>
                    </div>
                    <h4 class="text-white text-lg mb-2" style="font-family: 'Poppins-Bold';">Fritas</h4>
                    <p class="text-gray-400 text-sm" style="font-family: 'Poppins';">$4.900 ARS</p>
                </div>

                <!-- Item 2 -->
                <div class="group text-center">
                    <div class="w-16 h-16 mx-auto mb-4 bg-gradient-to-r from-orange-500/20 to-red-500/20 rounded-full flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                        <div class="w-8 h-8 bg-red-400 rounded-full"></div>
                    </div>
                    <h4 class="text-white text-lg mb-2" style="font-family: 'Poppins-Bold';">Anillos</h4>
                    <p class="text-gray-400 text-sm" style="font-family: 'Poppins';">$5.900 ARS</p>
                </div>

                <!-- Item 3 -->
                <div class="group text-center">
                    <div class="w-16 h-16 mx-auto mb-4 bg-gradient-to-r from-orange-500/20 to-red-500/20 rounded-full flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                        <div class="w-8 h-8 bg-yellow-400 rounded-full"></div>
                    </div>
                    <h4 class="text-white text-lg mb-2" style="font-family: 'Poppins-Bold';">Nuggets</h4>
                    <p class="text-gray-400 text-sm" style="font-family: 'Poppins';">$6.900 ARS</p>
                </div>

                <!-- Item 4 -->
                <div class="group text-center">
                    <div class="w-16 h-16 mx-auto mb-4 bg-gradient-to-r from-orange-500/20 to-red-500/20 rounded-full flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                        <div class="w-8 h-8 bg-orange-300 rounded-full"></div>
                    </div>
                    <h4 class="text-white text-lg mb-2" style="font-family: 'Poppins-Bold';">Ensaladas</h4>
                    <p class="text-gray-400 text-sm" style="font-family: 'Poppins';">$4.300 ARS</p>
                </div>
            </div>
        </div>
    </div>

</section>