---
// FeaturedMenu.astro
import Card from './Card.astro';

// Datos del menú profesional
const menuItems = [
    {
        title: "CUARTO DE LIBRA",
        subtitle: "PREMIUM",
        description: "Carne de res premium de 1/4 lb con queso fundido, vegetales frescos y nuestra salsa exclusiva de la casa",
        price: "$8.999 ARS",
        image: "https://images.unsplash.com/photo-1568901346375-23c9450c58cd?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1999&q=80",
        alt: "Hamburguesa Cuarto de Libra Premium",
        featured: true
    },
    {
        title: "BIG NIGGA",
        subtitle: "SIGNATURE",
        description: "Nuestra hamburguesa insignia con carne premium, vegetales de temporada y salsa secreta de la casa",
        price: "$6.999 ARS",
        image: "https://images.unsplash.com/photo-1550547660-d9450f859349?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1965&q=80",
        alt: "Hamburguesa Big Nira Signature",
        featured: false
    },
    {
        title: "PAPAS ARTESANALES",
        subtitle: "CRISPY GOLD",
        description: "Papas fritas doradas y crujientes sazonadas con nuestra mezcla especial de especias gourmet",
        price: "$7.200 ARS",
        image: "https://images.unsplash.com/photo-1573080496219-bb080dd4f877?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2069&q=80",
        alt: "Papas Fritas Artesanales Crispy Gold",
        featured: false
    }
];
---

<section class="py-20 lg:py-32 relative overflow-hidden">
    <!-- Efecto Grain mejorado -->
    <div class="absolute inset-0 opacity-30 mix-blend-multiply">
        <div 
            class="w-full h-full bg-repeat opacity-60"
            style={{
                backgroundImage: `url("data:image/svg+xml,%3Csvg viewBox='0 0 280 280' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter3'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter3)' opacity='0.5'/%3E%3C/svg%3E")`,
                backgroundSize: "180px 180px",
            }}
        ></div>
    </div>

    <!-- Elementos decorativos mejorados con efectos glow -->
    <div class="absolute inset-0">
        <!-- Orbes de luz principales -->
        <div class="absolute top-10 left-10 w-96 h-96 bg-gradient-radial from-orange-500/20 via-orange-500/10 to-transparent rounded-full blur-3xl animate-pulse"></div>
        <div class="absolute bottom-10 right-10 w-80 h-80 bg-gradient-radial from-red-500/25 via-red-500/15 to-transparent rounded-full blur-3xl animate-pulse delay-1000"></div>
        <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-64 h-64 bg-gradient-radial from-yellow-400/15 via-yellow-400/8 to-transparent rounded-full blur-2xl animate-pulse delay-500"></div>
        
        <!-- Orbes secundarios -->
        <div class="absolute top-1/4 right-1/4 w-48 h-48 bg-gradient-radial from-orange-300/15 via-orange-300/8 to-transparent rounded-full blur-xl animate-pulse delay-700"></div>
        <div class="absolute bottom-1/3 left-1/3 w-40 h-40 bg-gradient-radial from-red-300/12 via-red-300/6 to-transparent rounded-full blur-lg animate-pulse delay-300"></div>
        
        <!-- Líneas decorativas con glow -->
        <div class="absolute top-0 left-1/4 w-px h-full bg-gradient-to-b from-transparent via-orange-500/20 to-transparent shadow-lg shadow-orange-500/20"></div>
        <div class="absolute top-0 right-1/3 w-px h-full bg-gradient-to-b from-transparent via-red-500/20 to-transparent shadow-lg shadow-red-500/20"></div>
        <div class="absolute top-0 left-2/3 w-px h-full bg-gradient-to-b from-transparent via-yellow-400/15 to-transparent shadow-lg shadow-yellow-400/15"></div>
        
        <!-- Líneas horizontales sutiles -->
        <div class="absolute top-1/3 left-0 w-full h-px bg-gradient-to-r from-transparent via-orange-500/15 to-transparent"></div>
        <div class="absolute bottom-1/4 left-0 w-full h-px bg-gradient-to-r from-transparent via-red-500/15 to-transparent"></div>
        
        <!-- Elementos geométricos flotantes -->
        <div class="absolute top-20 right-1/4 w-3 h-3 bg-orange-400/40 rounded-full animate-ping"></div>
        <div class="absolute bottom-32 left-1/4 w-2 h-2 bg-red-400/40 rounded-full animate-ping delay-1000"></div>
        <div class="absolute top-1/2 right-1/3 w-4 h-4 bg-yellow-400/30 rounded-full animate-ping delay-500"></div>
        
        <!-- Efectos de resplandor en las esquinas -->
        <div class="absolute top-0 left-0 w-32 h-32 bg-gradient-to-br from-orange-500/10 to-transparent blur-xl"></div>
        <div class="absolute top-0 right-0 w-32 h-32 bg-gradient-to-bl from-red-500/10 to-transparent blur-xl"></div>
        <div class="absolute bottom-0 left-0 w-32 h-32 bg-gradient-to-tr from-yellow-500/8 to-transparent blur-xl"></div>
        <div class="absolute bottom-0 right-0 w-32 h-32 bg-gradient-to-tl from-orange-500/8 to-transparent blur-xl"></div>
    </div>

    <div class="relative z-10 container mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Header Section mejorado con efectos avanzados -->
        <div class="text-center mb-16 lg:mb-20 relative">
            <!-- Badge con efectos glow -->
            <div class="inline-flex items-center space-x-3 bg-gradient-to-r from-orange-500/25 via-red-500/20 to-orange-500/25 backdrop-blur-md border border-orange-500/40 px-8 py-4 rounded-full mb-10 hover:scale-110 transition-all duration-500 shadow-2xl shadow-orange-500/20 hover:shadow-orange-500/40 group">
                <div class="w-3 h-3 bg-gradient-to-r from-orange-400 to-red-400 rounded-full animate-pulse shadow-lg shadow-orange-400/50"></div>
                <span class="text-orange-300 uppercase tracking-widest text-sm font-bold group-hover:text-orange-200 transition-colors duration-300" style="font-family: 'Poppins-Bold'; text-shadow: 0 0 10px rgba(251, 146, 60, 0.3);">Especialidades Gourmet</span>
                <div class="w-3 h-3 bg-gradient-to-r from-red-400 to-orange-400 rounded-full animate-pulse delay-500 shadow-lg shadow-red-400/50"></div>
            </div>
            
            <!-- Main Title con efectos de glow y animación -->
            <div class="relative mb-8">
                <h2 class="text-5xl sm:text-6xl lg:text-7xl xl:text-8xl text-transparent bg-clip-text bg-gradient-to-r from-white via-orange-200 to-red-300 leading-tight tracking-tighter relative z-10" style="font-family: 'Poppins-Bold'; text-shadow: 0 0 30px rgba(251, 146, 60, 0.4);">
                    CARTA SELECTA
                </h2>
                <!-- Efecto de resplandor detrás del título -->
                <div class="absolute inset-0 text-5xl sm:text-6xl lg:text-7xl xl:text-8xl text-orange-500/20 leading-tight tracking-tighter blur-sm" style="font-family: 'Poppins-Bold';">
                    CARTA SELECTA
                </div>
                <!-- Líneas decorativas animadas alrededor del título -->
                <div class="absolute -top-4 -left-4 w-8 h-8 border-l-2 border-t-2 border-orange-400/40 animate-pulse"></div>
                <div class="absolute -top-4 -right-4 w-8 h-8 border-r-2 border-t-2 border-red-400/40 animate-pulse delay-300"></div>
                <div class="absolute -bottom-4 -left-4 w-8 h-8 border-l-2 border-b-2 border-yellow-400/40 animate-pulse delay-600"></div>
                <div class="absolute -bottom-4 -right-4 w-8 h-8 border-r-2 border-b-2 border-orange-400/40 animate-pulse delay-900"></div>
            </div>
            
            <!-- Subtitle mejorado -->
            <p class="text-xl lg:text-2xl text-gray-300 max-w-3xl mx-auto leading-relaxed mb-8" style="font-family: 'Poppins'; text-shadow: 0 0 15px rgba(156, 163, 175, 0.3);">
                Descubre nuestras creaciones más populares, elaboradas con pasión y servidas con orgullo en cada bocado
            </p>
            
            <!-- Decorative lines mejoradas -->
            <div class="mt-10 flex justify-center items-center space-x-4">
                <div class="w-16 h-px bg-gradient-to-r from-transparent to-orange-500 shadow-lg shadow-orange-500/30"></div>
                <div class="w-4 h-4 bg-gradient-to-r from-orange-400 to-red-400 rounded-full animate-spin shadow-lg shadow-orange-400/50"></div>
                <div class="w-32 h-px bg-gradient-to-r from-orange-500 via-red-500 to-orange-500 shadow-lg shadow-orange-500/30"></div>
                <div class="w-4 h-4 bg-gradient-to-r from-red-400 to-orange-400 rounded-full animate-spin delay-500 shadow-lg shadow-red-400/50"></div>
                <div class="w-16 h-px bg-gradient-to-l from-transparent to-red-500 shadow-lg shadow-red-500/30"></div>
            </div>
        </div>

        <!-- Menu Grid -->
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
            {menuItems.map((item) => (
                <Card 
                    title={item.title}
                    subtitle={item.subtitle}
                    description={item.description}
                    price={item.price}
                    image={item.image}
                    alt={item.alt}
                    featured={item.featured}
                />
            ))}
        </div>

        <!-- Call to Action Section mejorado -->
        <div class="text-center mt-20 lg:mt-24 relative">
            <!-- Elementos decorativos alrededor de los botones -->
            <div class="absolute inset-0 flex justify-center items-center">
                <div class="w-96 h-96 bg-gradient-radial from-orange-500/5 via-orange-500/2 to-transparent rounded-full blur-3xl"></div>
            </div>
            
            <!-- Líneas decorativas superiores -->
            <div class="flex justify-center items-center space-x-6 mb-12">
                <div class="w-20 h-px bg-gradient-to-r from-transparent to-orange-500/50"></div>
                <div class="w-3 h-3 bg-orange-400/60 rounded-full animate-pulse"></div>
                <div class="w-3 h-3 bg-red-400/60 rounded-full animate-pulse delay-300"></div>
                <div class="w-3 h-3 bg-yellow-400/60 rounded-full animate-pulse delay-600"></div>
                <div class="w-20 h-px bg-gradient-to-l from-transparent to-red-500/50"></div>
            </div>
            
            <div class="relative z-10 inline-flex flex-col sm:flex-row gap-6 sm:gap-8">
                <!-- Botón principal mejorado -->
                 <a href="menu">
                <button class="group relative bg-gradient-to-r from-orange-500 via-red-500 to-orange-600 hover:from-orange-600 hover:via-red-600 hover:to-orange-700 text-black px-10 lg:px-16 cursor-pointer py-4 sm:py-4 lg:py-5 text-lg lg:text-xl uppercase tracking-wide rounded-full shadow-2xl shadow-orange-500/30 hover:shadow-orange-500/50 transition-all duration-700 hover:scale-110 overflow-hidden transform hover:-translate-y-1" style="font-family: 'Poppins-Bold';">
                    <span class="relative z-10 font-black text-white">Ver Carta Completa</span>
                    <!-- Efecto de brillo animado -->
                    <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/30 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-700 transform -skew-x-12 group-hover:animate-pulse"></div>
                    <!-- Partículas flotantes -->
                    <div class="absolute top-1 left-1 w-1 h-1 bg-white/60 rounded-full animate-ping"></div>
                    <div class="absolute bottom-1 right-1 w-1 h-1 bg-white/60 rounded-full animate-ping delay-500"></div>
                </button>
            </a>
                <!-- Botón secundario mejorado -->
                  <a href="https://www.pedidosya.com.ar/restaurantes/buenos-aires/burger-king-obelisco-a4cad619-85df-4ee4-9107-70ef92f21f8d-menu">
              
                <button class="group cursor-pointer relative border-2 border-orange-500/60 bg-transparent hover:bg-gradient-to-r hover:from-orange-500/20 hover:to-red-500/20 text-white hover:text-orange-100 px-10 lg:px-16 py-5 lg:py-6 text-lg lg:text-xl uppercase tracking-wide rounded-full backdrop-blur-md transition-all duration-700 hover:scale-110 hover:border-orange-400 hover:shadow-2xl hover:shadow-orange-500/25 transform hover:-translate-y-1 overflow-hidden" style="font-family: 'Poppins-Bold';">
                    <span class="relative z-10 font-black">Pedir Ahora</span>
                    <!-- Efecto de resplandor en hover -->
                    <div class="absolute inset-0 bg-gradient-to-r from-orange-500/0 via-orange-500/10 to-orange-500/0 opacity-0 group-hover:opacity-100 transition-opacity duration-700"></div>
                    <!-- Líneas decorativas -->
                    <div class="absolute top-0 left-1/4 w-px h-full bg-gradient-to-b from-transparent via-orange-400/30 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                    <div class="absolute top-0 right-1/4 w-px h-full bg-gradient-to-b from-transparent via-red-400/30 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 delay-200"></div>
                </button>
            </a>
            </div>
            
            <!-- Elementos decorativos inferiores -->
            <div class="flex justify-center items-center space-x-8 mt-12">
                <div class="w-2 h-2 bg-orange-400/40 rounded-full animate-bounce"></div>
                <div class="w-24 h-px bg-gradient-to-r from-orange-500/30 to-red-500/30"></div>
                <div class="w-3 h-3 bg-gradient-to-r from-orange-400 to-red-400 rounded-full animate-pulse"></div>
                <div class="w-24 h-px bg-gradient-to-r from-red-500/30 to-orange-500/30"></div>
                <div class="w-2 h-2 bg-red-400/40 rounded-full animate-bounce delay-500"></div>
            </div>
        </div>
    </div>

 </section>

<style>
    @keyframes float {
        0%, 100% { transform: translateY(0px) rotate(0deg); }
        50% { transform: translateY(-20px) rotate(180deg); }
    }
    
    @keyframes glow {
        0%, 100% { box-shadow: 0 0 20px rgba(251, 146, 60, 0.3); }
        50% { box-shadow: 0 0 40px rgba(251, 146, 60, 0.6), 0 0 60px rgba(251, 146, 60, 0.4); }
    }
    
    @keyframes shimmer {
        0% { transform: translateX(-100%) skewX(-15deg); }
        100% { transform: translateX(200%) skewX(-15deg); }
    }
    
    @keyframes pulse-glow {
        0%, 100% { 
            box-shadow: 0 0 20px rgba(251, 146, 60, 0.4), 0 0 40px rgba(251, 146, 60, 0.2);
            filter: brightness(1);
        }
        50% { 
            box-shadow: 0 0 30px rgba(251, 146, 60, 0.6), 0 0 60px rgba(251, 146, 60, 0.4), 0 0 80px rgba(251, 146, 60, 0.2);
            filter: brightness(1.1);
        }
    }
    
    @keyframes rotate-border {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }
    
    .floating-element {
        animation: float 6s ease-in-out infinite;
    }
    
    .glow-effect {
        animation: glow 3s ease-in-out infinite;
    }
    
    .shimmer-effect {
        position: relative;
        overflow: hidden;
    }
    
    .shimmer-effect::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
        animation: shimmer 2s infinite;
    }
    
    .pulse-glow-effect {
        animation: pulse-glow 2s ease-in-out infinite;
    }
    
    .bg-gradient-radial {
        background: radial-gradient(circle, var(--tw-gradient-stops));
    }
    
    .grain {
        background-image: 
            radial-gradient(circle at 25% 25%, rgba(255, 255, 255, 0.02) 0%, transparent 50%),
            radial-gradient(circle at 75% 75%, rgba(255, 255, 255, 0.02) 0%, transparent 50%),
            radial-gradient(circle at 25% 75%, rgba(255, 255, 255, 0.01) 0%, transparent 50%),
            radial-gradient(circle at 75% 25%, rgba(255, 255, 255, 0.01) 0%, transparent 50%);
        background-size: 100px 100px, 80px 80px, 120px 120px, 90px 90px;
        background-position: 0 0, 40px 40px, 80px 0, 0 80px;
    }
    
    /* Efectos adicionales para elementos decorativos */
    .decorative-border {
        position: relative;
    }
    
    .decorative-border::before {
        content: '';
        position: absolute;
        inset: -2px;
        background: conic-gradient(from 0deg, #f97316, #ef4444, #f59e0b, #f97316);
        border-radius: inherit;
        animation: rotate-border 3s linear infinite;
        z-index: -1;
    }
</style>